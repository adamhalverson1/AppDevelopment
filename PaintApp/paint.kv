#:kivy 1.0.9
#:import utils kivy.utils

ColorBar:

<ColorBar>:

#White background for the paint app.
    canvas:
        Color:
            rgb: 255, 255, 255, 1
        Rectangle:
            size: root.width, root.height

#Button bar
    StackLayout:
        orientation: 'lr-bt'

        ToggleButton:
            id: 'redbtn'
            size_hint: .125, .2
            background_color: [255, 0, 0, 1]
            group: "Color"
            on_press: root.btn_id(self)
            
        ToggleButton:
            #text: "Orange Button"
            id: 'orangebtn'
            size_hint: .125 , .2
            background_color: utils.get_color_from_hex('#FF0000')
            group: "Color"
            on_press: root.btn_id(self)

        ToggleButton:
            #text: "Yellow Button"
            id: 'yellowbtn'
            size_hint: .125 , .2
            background_color: [255, 255, 0, 1]
            group: "Color"
            on_press: root.btn_id(self)

        ToggleButton:
            #text: "Green Button"
            id: 'greenbtn'
            size_hint: .125 , .2
            background_color: [0, 128, 0, 1]
            group: "Color"
            on_press: root.btn_id(self)

        ToggleButton:
            #text: "Blue Button"
            id: 'bluebtn'
            size_hint: .125 , .2
            background_color: [0, 0, 255, 1]
            group: "Color"
            on_state:
                if self.state == "down": \
                root.red_touch_down() 

        ToggleButton:
            #text: "Purple Button"
            id: 'purplebtn'
            size_hint: .125 , .2
            background_color: [128, 0, 128, 1]
            group: "Color"
            on_press: root.btn_id(self)

        ToggleButton:
            #text: "White Button"
            id: 'whitebtm'
            size_hint: .125 , .2
            background_color: [255, 255, 255, 1]
            group: "Color"
            on_press: root.btn_id(self)

        ToggleButton:
            #text: "Black Button"
            id: 'blackbtn'
            state: 'down'
            size_hint: .125 , .2
            background_color: [0, 0, 0]
            group: "Color"
            on_press: root.btn_id(self)