<RockPaperScissors>
    FloatLayout:
        size: root.width, root.height
    
        Label:
            text: 'Rock Paper Scissors'
            pos_hint: {"x":0, "top":1.25}

        TextInput:
            id: userinput
            size_hint: (1, .15)
            pos_hint: {'x': 1.25 , 'y': 1.25}

        BoxLayout:
            Button:
                text: 'Rock'
                id: rock
                size_hint: .5, .5
                on_press: root.button_press(user_choice='ROCK')
    
            Button:
                text: 'Paper'
                id: paper
                size_hint: .5, .5
                on_press: root.button_press(user_choice='PAPER')

            Button:
                text: 'Scissors'
                id: scissors
                size_hint: .5, .5
                on_press: root.button_press(user_choice='SCISSORS')
